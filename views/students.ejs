<% include partials/header %>


    <div class="container">
        <header class="jumbotron">
            <div class="container">
                <h1>Welcome to ABC Schools</h1>
                <p> View Student Information</p>
                <p>
                    <a class="btn btn-primary btn-large" href="students/new">Add a new Student details</a>

                </p>


        </header>
        <div class="details">
            <% students.forEach(function(students){ %>
                    <div class="student">
                        <h3>Name: <%= students.name %></h3>
                        <p>Batch: <%= students.batch %></p>
                        <p>Group: <%= students.group %></p>
                        <p>Physics: <%= students.m1 %></p>
                        <p>Chemistry: <%= students.m2 %></p>
                        <p>Biology: <%= students.m3 %></p>
                        <p>Maths: <%= students.m4 %></p>
                        <a class="btn btn-primary">Update</a>
                        <a class="btn btn-primary">Delete</a>
                    </div>
                <% });  %>
        </div>

        </div>

        <% include partials/footer %>