<% include partials/header %>


    <div class="container">
        <header class="jumbotron">
            <div class="container">
                <h1>Welcome to ABC Schools</h1>
                <p> View Student Information</p>
                <p>
                    <a class="btn btn-primary btn-large" href="/students/new">Add a new Student details</a>

                </p>


        </header>
        <div class="row text-center" style ="display:flex; flex-wrap: wrap;">
            <% students.forEach(function(students){ %>
                <div class="col-md-3 col-sm-6">
                    <div class="caption">
                        <h4>
                            <%= students.name %>
                        </h4>
                        <h4>
                            <%= students.batch %>
                        </h4>
                        <h4>
                            <%= students.group %>
                        </h4>
                    </div>


                </div>

                <% });  %>
        </div>

        </div>

        <% include partials/footer %>