<% include partials/header %>
    <div class="container">
        <h1 style="text-align: center;">Add a new student Info</h1>
        <div style="width: 30%; margin: 25px auto">
            <form action="/students" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="Name">

                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="batch" placeholder="Batch">

                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="group" placeholder="Group">

                </div>
                <h2>Marks -subjectwise</h2>
                <div class="form-group">
                    <input class="form-control" type="text" name="m1" placeholder="m1-phy">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="m2" placeholder="m2-chem">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="m3" placeholder="m3-bio">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="m4" placeholder="m4-maths">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">submit</button>

                </div>

               
            </form>

            <a href="/students">Go Back</a>
            
        </div>
        <h2>Report Card</h2>
        <form action="/result" method="POST">
    <table border="1">
        <tr><td>Name</td><td><input type="text" id="txtStudentName" readonly></td></tr>
        <tr><td>Class</td><td><input type="text" id="txtStudentClass" readonly></td></tr>
        <tr><td>Total Marks</td><td><input type="text" id="txtTotalMarks" readonly></td></tr>
        <tr><td>Average Marks</td><td><input type="text" id="txtAvgMarks" readonly></td></tr>
        <tr><td>Grade</td><td><input type="text" id="txtGrade" readonly></td></tr>
        <tr><td>Remarks</td><td><input type="text" id="txtResult" readonly></td></tr>
    </table></form>
